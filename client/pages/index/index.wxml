<!--index.wxml-->

<view>

<!--第一个视图-->
<view class='bg' >
    <view class='zoomImage' style='background-image:url({{snowpic}})'  >
       <text id='1' class='h1' >{{snowText}}</text>
       <text class='h2'>{{snowtext}}</text>
       <button class='bt' bindtap='intoActivity' >{{join}}</button>
     </view>
</view>


<!--第二个视图-->
<view class='bg'>
    <view  class='zoomImage' style='background-image:url({{meetpic}})' >
       <text id='2' class='h1' >{{meetText}}</text>
       <text class='h2' >{{meettext}}</text>
       <button class='bt' bindtap='intoActivity1'>{{join}}</button>
     </view>
</view>

<!--第三个视图-->
<view class='bg'>
    <view  class='zoomImage' style='background-image:url({{believepic}})' >
       <text id='3' class='h1' >{{believeText}}</text>
       <text class='h2'>{{believeText}}</text>
       <button class='bt' bindtap='intoActivity2'>{{join}}</button>
     </view>
</view>


<!-- 用户信息 -->
<view class='userinfo'>
    <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover" bindtap='intoUserinfo'></image>
</view>


</view>
