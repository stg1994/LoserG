/*头像*/
.avator{
  display: inline-block;
  vertical-align: middle;
  width:56rpx;
  height: 56rpx;
  margin-left: 14rpx;
  margin-top: 14rpx;
  
}
.title-time{
  flex-direction: column;
  display: inline-block;
  margin-left: 14rpx;
  margin-top: 12rpx;
  vertical-align: middle;
  padding: 0;
  color: #454545;
}
/*标题*/
.title{
  display: block;
  font-size: 24rpx;
  margin-bottom: 10rpx;
}
.time{
  display: block;
  font-size: 15rpx;
}
.morebtnnormal{
  width: 79rpx;
  height: 79rpx;
  float: right;
}


/*内容*/
.content{
  margin: 20rpx 14rpx;
}
.content-text{
  display: block;
  font-size: 30rpx;
  line-height: 40rpx;
  margin-bottom: 14rpx;
  color: #333333;
}
.content-multimedia{
  text-align:center;
  margin:0 auto;
  overflow: hidden;
}

/*视频*/
.content-multimedia video{
  display: inline-block;
  max-width:100%;
  height: auto;
  min-width: 70%;
}

.cai image{
  margin-top: 5rpx;
}

