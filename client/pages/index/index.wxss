/* index.wxss */
/* 圆角边框 */
.frame {
  background-color: #00ffff;
  border-radius: 10px;
  height: 400px;
  width: 400px;
  display: flex;
  justify-content: center;
  
}

/* 背景样式 */
.bg { 
  background: rgba(255,255,255,0.5); 
  display: flex;
  align-content: center;
  justify-content: center;
  margin-left: 4%;
  height: 406px;
  width: 92%;
}

/* 裁剪图片 */
.zoomImage{
    border-radius: 10px;
    width:100%;
    height:0;
    padding-bottom: 100%;
    overflow:hidden;
    background-position: center center;
    background-repeat: no-repeat;
    -webkit-background-size:cover;
    -moz-background-size:cover;
    background-size:cover;
}

/* 大文字样式 */
.h1{
  display: flex;
  justify-content: center;
  margin-top: 60px;
  width: 100%;
  height: 100%;
  color: #ffffff;
  font-style: Arial;
  font-size: 50px;
  font: bold;
}

/* 小文字样式 */
.h2{
  display: flex;
  justify-content: center;
  margin-top: 60px;
  width: 100%;
  height: 100%;
  color: #ffffff;
}

/* 按钮样式 */
.bt{
  width: 90px;
  border-radius: 20px;
  font-size: 16px;
  align-content: center;
  margin-top: 150px;
  background-color: #000000;
  color: #ffffff;
}

/* 用户信息-头像 */
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

/*用户头像布局*/
.userinfo{
  position: fixed;

  bottom: 0;
  justify-content: center;
  flex-direction: column;
  margin-bottom: 10%;
  
}






