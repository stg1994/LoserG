<!--index.wxml-->
<!-- welcome to Loser-SL 标题 -->
<view class="welcome">
  <text>welcome to LoserG</text>
</view>

<!-- 用户信息 -->
<view class="container">
  <view class="userinfo">
    <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
    <text class="userinfo-nickname">{{motto}}{{userInfo.nickName}}</text>
  </view>
</view>



<!-- 按钮信息 -->
<view class='losersl_button'>
  <button type="primary" size="mini" loading="{{loading}}" plain="{{plain}}"
        disabled="{{disabled}}" bindtap="intoHome" > 扬帆起航 </button>
</view>

